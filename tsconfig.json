{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node"],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@reclamador/reclamitux": ["libs/reclamitux/src/index.ts"],
      "@reclamador/libs/mylib": ["libs/mylib/src/index.ts"],
      "@reclamador/libs/two-lib": ["libs/two-lib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
